@model IEnumerable<eProject.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}


<h1 class="text-center">Management Users</h1>
<p class="text-danger">@ViewData["msg"]</p>
<table class="table table-hover">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>                
                <td>
                    <a asp-action="EditRole" asp-route-id="@item.UserId" class="btn btn-success">Edit Role</a>
                    <a asp-action="AccountLock" asp-route-id="@item.UserId" class="btn btn-info">Lock</a>
                                     
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="LockList" asp-controller="User">List of locked accounts</a> |
    <a asp-action="AdminAccount" asp-controller="User">List of Admin Accounts</a>
</div>