@model eProject.Models.User

@{
    ViewData["Title"] = "Login";
}
<header id="header" class="ex-2-header" >
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Log In</h1>
            <p class="text-danger">@ViewBag.msg</p>
                <p>You don't have a password? Then please <a class="white" asp-action="Create" asp-controller="User">Sign Up</a></p>
                <!-- Sign Up Form -->
                <div class="form-container">
                    <form  asp-action="Login" asp-controller="PageHome" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control-input" id="lemail" name="user" required>
                            <label class="label-control" for="lemail">Email</label>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control-input" id="lpassword" name="pass" required>
                            <label class="label-control" for="lpassword">Password</label>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control-submit-button">LOG IN</button>
                        </div>
                        <div class="form-message">
                            <div id="lmsgSubmit" class="h3 text-center hidden"></div>
                        </div>
                    </form>
                </div> <!-- end of form container -->
                <!-- end of sign up form -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
