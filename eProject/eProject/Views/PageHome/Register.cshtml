@model eProject.Models.User

@{
    ViewData["Title"] = "Create";
}

<!-- Header -->
<header id="header" class="ex-2-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Sign Up</h1>
               
                <p>Fill out the form below to sign up for Tivo. Already signed up? Then just <a class="white" href="log-in.html">Log In</a></p>
                <!-- Sign Up Form -->
                <div class="form-container">
                    <form id="signUpForm" data-toggle="validator" data-focus="false" asp-action="Create" asp-controller="User" method="post">
                        <div class="form-group">
                            <input asp-for="Username" class="form-control-input" required>
                            <label class="label-control" asp-for="Username" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="Username" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="FullName" class="form-control-input" required>
                            <label class="label-control" asp-for="FullName" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="FullName" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control-input" required>
                            <label class="label-control" asp-for="Password" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="Password" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Phone" class="form-control-input" required>
                            <label class="label-control" asp-for="Phone" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="Phone" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control-input" required>
                            <label class="label-control" asp-for="Email" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="Email" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Address" class="form-control-input" required>
                            <label class="label-control" asp-for="Address" for="semail"></label>
                            <div class="help-block with-errors"><span asp-validation-for="Address" class="text-danger"></span></div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control-submit-button">SIGN UP</button>
                        </div>
                        <div class="form-message">
                            <div id="smsgSubmit" class="h3 text-center hidden"></div>
                        </div>
                    </form>
                </div> <!-- end of form container -->
                <!-- end of sign up form -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
