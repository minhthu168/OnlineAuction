@model eProject.Models.Auction

@{
    ViewData["Title"] = "Create";
}
<header id="header" class="ex-2-header" style="width:auto;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Create Auction</h1> 
            <p class="text-danger">@TempData["msg"]</p>
                <div class="form-container">
                    <form asp-action="Create" asp-controller="AuctionUser" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                            <input type="file" multiple="multiple" name="images" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Document" class="control-label"></label>
                            <input type="file" name="document" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Condition" class="control-label"></label> :&nbsp;&nbsp;&nbsp;
                            <input asp-for="Condition" type="radio" value="New" />New &nbsp;&nbsp;&nbsp;
                            <input asp-for="Condition" type="radio" value="Used" />Used&nbsp;&nbsp;&nbsp;
                            <input asp-for="Condition" type="radio" value="Rare" />Rare
                            <span asp-validation-for="Condition" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate"></label>
                            <input asp-for="StartDate" />&nbsp;&nbsp;&nbsp;
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                            <label asp-for="EndDate"></label>
                            <input asp-for="EndDate" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MinimumBid"></label>
                            <input asp-for="MinimumBid" />
                            <span asp-validation-for="MinimumBid" class="text-danger"></span>
                            <label asp-for="BidIncremenent"></label>
                            <input asp-for="BidIncremenent" />
                            <span asp-validation-for="MinimumBid" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>:&nbsp;&nbsp;&nbsp;
                            <select asp-for="CategoryId" asp-items="ViewBag.category">
                                <option value="0" class="form-control">--Select---</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div> <!-- end of form container -->
                <!-- end of sign up form -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
